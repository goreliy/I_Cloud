# Database
DATABASE_TYPE=sqlite
DATABASE_URL=sqlite:///./ibolid.db
# DATABASE_TYPE=postgresql
# DATABASE_URL=postgresql://user:password@localhost/ibolid

# Authentication
AUTH_ENABLED=true
JWT_SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application
APP_NAME=IBolid Cloud
DEBUG=true
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Admin (при первом запуске создается админ)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123

# Performance (Uvicorn workers)
WORKERS=4
WORKER_TIMEOUT=120

# Reverse proxy settings (для работы за nginx с префиксом пути)
# Если приложение доступно через /cloud2, установите: ROOT_PATH=/cloud2
ROOT_PATH=

# Stress test limits
STRESS_TEST_MAX_WORKERS=100
STRESS_TEST_MAX_RPS=10000
STRESS_TEST_MAX_DURATION=600

